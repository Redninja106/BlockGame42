<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Assets\**\*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\SDL3\SDL3.csproj" />
  </ItemGroup>
	
	<ItemGroup>
		<UpToDateCheckInput Include="@(Content);@(None)" />
	</ItemGroup>
	
	<ItemGroup>
	  <Folder Include="Notes\" />
	</ItemGroup>
	
  <Target Name="PostBuild" BeforeTargets="PostBuildEvent">
    <Exec Command="&quot;.\..\..\BlockGame42.Assets.Pipeline\bin\Debug\net9.0\BlockGame42.Assets.Pipeline.exe&quot; $(ProjectDir)Assets $(OutDir)Assets" />
  </Target>
</Project>
